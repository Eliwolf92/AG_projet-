{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow" style="width: 750px; height: 950px;">
        <div class="card-body d-flex flex-column">

            <h2 class="text-center mb-4 mt-3">Connexion</h2>

            {% if error %}
                <div class="alert alert-danger text-center">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" class="mx-auto w-100" style="max-width: 400px;">
                <div class="mb-3">
                    <label for="username" class="form-label">Email</label>
                    <input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" required>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success w-100">Se connecter</button>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            </form>

            <hr class="my-4">

            <div class="text-center">
                <p>Pas encore de compte ?</p>
                <a href="{{ path('app_register')}}" class="btn btn-primary">Cr√©er un compte</a>
            </div>

        </div>
    </div>
</div>
{% endblock %}
