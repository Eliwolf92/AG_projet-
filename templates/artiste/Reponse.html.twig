{% extends 'base.html.twig' %}

{% block title %}Répondre à la demande{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2>Répondre à {{ demande.demandeurs.username }}</h2>
    <p class="mb-3"><strong>Message reçu :</strong></p>
    <div class="bg-light border p-3 rounded mb-4">{{ demande.message }}</div>

    {{ form_start(form) }}
        {{ form_row(form.reponse) }}
        <button class="btn btn-success mt-3">Envoyer la réponse</button>
    {{ form_end(form) }}

    <a href="{{ path('app_artiste_demande', { id: app.user.id }) }}" class="btn btn-secondary mt-3">Retour à la liste</a>
</div>
{% endblock %}
