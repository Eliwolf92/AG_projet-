<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <header>
        <h1 id="Title_website">Les Artistes de Garches</h1>
            {% if app.user %}
            <div class="text-end">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin') }}" id="Sign_Up" class="d-block fw-bold">{{ app.user.username }}</a>
                {% elseif is_granted('ROLE_ARTISTE') %}
                    <a href="{{ path('app_artiste_page', {'id': app.user.id}) }}" id="Sign_Up" class="d-block fw-bold">{{ app.user.username }}</a>
                {% else %}
                    <a href="{{ path('app_profil') }}" id="Sign_Up" class="d-block fw-bold">{{ app.user.username }}</a>
                {% endif %}

                <form method="post" action="{{ path('app_logout') }}" class="mt-1">
                    <button class="btn btn-outline-danger btn-sm">Se déconnecter</button>
                </form>
            </div>
        {% else %}
            <button id="Sign_Up" class="btn btn-primary">
                <a href="{{ path('app_login') }}" class="text-white text-decoration-none">Connexion</a>
            </button>
        {% endif %}

    </header>
    <div class="hero-section mb-5">
        <ul id="nav">
            <li><a href="{{path('app_index')}}">Accueil</a></li>
            <li><a href="">Catégories</a></li>
            <li><a href="">Contact</a></li>
            <li><a href="">À propos</a></li>
        </ul>
    </div>


            <main>
                {% block body %}
                {% endblock %}
            </main>

            <footer>
                <p>&copy; 2023 Les Artistes de Garches</p>
            </footer>
    
    </body>
</html>
