<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Les Artistes de Garches{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block meta %}
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
<header class="bg-light py-4">
    <div class="container d-flex justify-content-between ml-5 align-items-center">
        <h1 id="Title_website" class="m-0">Les Artistes de Garches</h1>

        {% set routes_a_exclure = ['app_login', 'app_profil','app_artiste_page','app_settings'] %}
        {% set route_profil = ['app_profil','app_artiste_page'] %}
        {% set route_log = ['app_login'] %}

        {% if app.user %}
            {% if app.request.attributes.get('_route') not in routes_a_exclure %}
                <div class="d-flex flex-column align-items-end">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin') }}" class="fw-bold mb-1 text-decoration-none">{{ app.user.username }}</a>
                    {% elseif is_granted('ROLE_ARTISTE') %}
                        <a href="{{ path('app_artiste_page', {'id': app.user.id}) }}" class="fw-bold mb-1 text-decoration-none">{{ app.user.username }}</a>
                    {% else %}
                        <a href="{{ path('app_profil', {'id': app.user.id}) }}" class="fw-bold mb-1 text-decoration-none">{{ app.user.username }}</a>
                    {% endif %}
                    <a href="{{ path('app_logout') }}">
                        <button class="btn btn-outline-danger btn-sm">Se déconnecter</button>
                    </a>
                </div>
            {% endif %}

            {% if app.request.attributes.get('_route') in route_profil %}
                <a href="{{ path('app_settings', {'id': app.user.id})}}">
                    <img src="{{ asset('uploads/settings.png')}}" alt="paramètre" class="setting-icon">
                </a>
            {% endif %}
        {% else %}
            {% if app.request.attributes.get('_route') not in routes_a_exclure %}
                <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Se connecter</a>
            {% endif %}
        {% endif %}
    </div>
</header>





        <section class="hero-section">
            <nav class="container">
                <ul id="nav" class="d-flex justify-content-center flex-wrap gap-4 list-unstyled mb-0">
                    <li><a href="{{ path('app_index') }}">Accueil</a></li>
                    <li><a href="{{ path('app_event') }}">Event</a></li>
                    <li><a href="{{ path('app_annexe') }}">À propos</a></li>
                </ul>
            </nav>
        </section>

        <main class="container my-5 flex-grow-1">
            {% block body %}{% endblock %}
        </main>

        <footer class="text-center py-4 bg-dark text-light flex-bottom">
            <p class="mb-0">&copy; {{ "now"|date("Y") }} Les Artistes de Garches</p>
        </footer>
    </body>
</html>
