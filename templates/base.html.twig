<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Les Artistes de Garches{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block meta %}
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('assets/app.css') }}">

        {% block stylesheets %}{% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
<header class="bg-light py-4" style="position: relative;">
    <div class="container text-center">
        <h1 id="Title_website" class="m-0">Les Artistes de Garches</h1>

        {% if app.user %}
            <div style="position: absolute; top: 50%; right: 15px; transform: translateY(-50%); display: flex; flex-direction: column; align-items: flex-end;">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin') }}" id="Sign_Up" class="fw-bold mb-1">{{ app.user.username }}</a>
                {% elseif is_granted('ROLE_ARTISTE') %}
                    <a href="{{ path('app_artiste_page', {'id': app.user.id}) }}" id="Sign_Up" class="fw-bold mb-1">{{ app.user.username }}</a>
                {% endif %}
                
                <form method="post" action="{{ path('app_logout') }}">
                    <button class="btn btn-outline-danger btn-sm">Se déconnecter</button>
                </form>
            </div>
        {% else %}
            <div style="position: absolute; top: 50%; right: 15px; transform: translateY(-50%);">
                <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Se connecter</a>
            </div>
        {% endif %}
    </div>
</header>



        <section class="hero-section">
            <nav class="container">
                <ul id="nav" class="d-flex justify-content-center flex-wrap gap-4 list-unstyled mb-0">
                    <li><a href="{{ path('app_index') }}">Accueil</a></li>
                    <li><a href="#">Event</a></li>
                    <li><a href="#">À propos</a></li>
                </ul>
            </nav>
        </section>

        <main class="container my-5">
            {% block body %}{% endblock %}
        </main>

        <footer class="text-center py-4 bg-light">
            <p class="mb-0">&copy; {{ "now"|date("Y") }} Les Artistes de Garches</p>
        </footer>
    </body>
</html>
